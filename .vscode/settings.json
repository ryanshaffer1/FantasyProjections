{
    "pylint.args": [
        "--disable=W0511",
        "--disable=C0301",
        "--disable=E0401",
        "--disable=W1203",
    ],
    "pylint.ignorePatterns": [
        "**/site-packages/**/*.py",
        ".vscode/*.py",
        "**/tests/**/*.py",
        "**/__init__.py"
    ],
    "black-formatter.args": ["--line-length", "100"],
    "editor.defaultFormatter": "mikoz.black-py",
    "notebook.defaultFormatter": "mikoz.black-py",
    "editor.defaultFoldingRangeProvider": "mikoz.black-py",
    "editor.formatOnSave": false,
    "files.saveConflictResolution": "overwriteFileOnDisk",
    "austin.path": ".venv/Scripts/austin.exe",
    "autoDocstring.customTemplatePath": "FantasyProjections/config/docstring.mustache",
    "autoDocstring.guessTypes": true,
    "python.testing.unittestArgs": [
        "-v",
        "-s",
        ".",
        "-p",
        "test_*.py"
    ],
    "python.testing.pytestEnabled": false,
    "python.testing.unittestEnabled": true,
    "python.analysis.extraPaths": [
        "./FantasyProjections"
    ],
    "python.experiments.optInto": ["pythonTestAdapter"],
}